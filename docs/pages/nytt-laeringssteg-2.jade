extends layout

block append title
  | - Læringssti

block content
  .two-column
    aside.two-column_col
      .learningpath-general-info
        h2(contenteditable="true").learningpath-general-info_h Learning path title

      include ../molecules/step-nav--new-step.jade

      include ../molecules/vertical-menu.jade

    main.two-column_col
      //-- Bruk draft.js her, disse input feltene er bare brukt for å simulere.
      .learning-path-step
        .learning-path_hd
          span.mediatype-icon
            svg.icon.icon--menu: use(xlink:href="/assets/symbol-defs.svg#icon-menu")
          select.mediatype-dd
            option Introduksjon
            option Tekst
            option Multimedia
          span.editable
            svg.icon.icon--create: use(xlink:href="/assets/symbol-defs.svg#icon-create")
          input(placeholder="Tittel på læringssteg" style="display: block;").learning-step-input.learning-step-input__title
        //-- Bruk draft.js her, disse input feltene er bare brukt for å simulere.
        .learning-path_bd
        ul.textformat-menu
            li.texformat-menu-item.texformat-menu-item__selected
              svg.icon.icon--format-bold: use(xlink:href="/assets/symbol-defs.svg#icon-format_bold")
            li.texformat-menu-item
              svg.icon.icon--format-italic: use(xlink:href="/assets/symbol-defs.svg#icon-format_italic")
            li.texformat-menu-item
              svg.icon.icon--format-list-bulleted: use(xlink:href="/assets/symbol-defs.svg#icon-format_list_bulleted")
            li.texformat-menu-item
              svg.icon.icon--format-list-numbered: use(xlink:href="/assets/symbol-defs.svg#icon-format_list_numbered")
          span.editable
            svg.icon.icon--create: use(xlink:href="/assets/symbol-defs.svg#icon-create")
          textarea(placeholder="Lag en beskrivelse av hva leseren skal lære om").learning-step-input.learning-step-input__paragraph
        .learningsource-form
          form
            label.mediatype-menu__label Lim in lenke (URL) fra ndla.no eller youtube.com
            input.search-form_query(type='text' value="https://ndla.no/nb/node/149925/oembed" placeholder="Lim in lenke")
            button.search-form_btn.button.learningsource-form--save-button Lagre
          .learningsource--wrapper
            iframe.learningsource__frame(src="https://ndla.no/nb/node/149925/oembed")
            a.learningsource__expand(href="#")
              span.button.button--outline Forhåndsvis hele artikkelen
