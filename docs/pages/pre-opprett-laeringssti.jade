extends layout

block append title
  | - Mine Læringsstier

block content
  .page-header
    h2.page-header_name Mine læringsstier

    .page-header_ctrls
        a.sorting-button(href="#")
          svg.icon.icon--sort-by-alpha: use(xlink:href="/assets/symbol-defs.svg#icon-sort_by_alpha")
        a.sorting-button(href="#")
          svg.icon.icon--list: use(xlink:href="/assets/symbol-defs.svg#icon-list")
        select
          - var i = 0;
          while i++ < 10
            option(value="#{i}") Sortering #{i}
  .tiles
    - var n = 2
    while n++ < 20
      .tile
        h3.tile_hd A learning path
        .tile_bd
          p Sriracha fixie 3 wolf moon before they sold out disrupt, plaid pinterest gastropub tousled austin. Freegan sustainable occupy cronut. Pickled kogi microdosing,
        .tile_ft
          strong Fact
  a.cta-link.labeled-icon.new-learningpath-button(href="#")
    svg.icon.icon--with-label.icon--add-circle-outline: use(xlink:href="/assets/symbol-defs.svg#icon-add_circle_outline")
    span.labeled-icon_text Opprett ny læringssti

  .lightbox-new-learningpath
    .lightbox-new-learningpath-content
      h1 Opprett ny læringssti
      label Tittel
      input 
      label Beskrivelse
      textarea.textarea(rows="4" cols="50" placeholder="Skriv en kort beskrivelse av læringsstien." maxlength="150")
      p.hint-text Max 150 tegn
      button Opprett ny læringssti

      