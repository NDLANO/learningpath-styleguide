extends layout

block append title
  | - Mine Læringsstier

block content
  .page-header
    h2.page-header_name Mine læringsstier

    .page-header_ctrls
      .sorting-menu
        a.sorting-button(href="#")
          svg.icon.icon--sort-by-alpha: use(xlink:href="/assets/symbol-defs.svg#icon-sort_by_alpha")
        a.sorting-button(href="#")
          svg.icon.icon--list: use(xlink:href="/assets/symbol-defs.svg#icon-list")
      select
        - var i = 0;
        while i++ < 10
          option(value="#{i}") Some value for #{i}
  .tiles
    - var n = 2
    while n++ < 20
      .tile
        h3.tile_hd A learning path
        .tile_bd
          p Sriracha fixie 3 wolf moon before they sold out disrupt, plaid pinterest gastropub tousled austin. Freegan sustainable occupy cronut. Pickled kogi microdosing,
        .tile_ft
          strong Fact
