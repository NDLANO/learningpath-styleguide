extends layout

block append title
  | - Læringssti

block content
  .two-column
    aside.two-column_col
      .learningpath-general-info
        h2(contenteditable="true").learningpath-general-info_h Learning path title

      include ../molecules/step-nav--new-step.jade

      include ../molecules/vertical-menu.jade

    main.two-column_col
      .learning-path_hd
        h1(contenteditable="true").learning-path_title.learning-path_editable-hinttext Læringssteg tittel
      .learning-path_bd
        p(contenteditable="true").learning-path_editable-hinttext Lag en beskrivelse av hva du ønsker at brukeren skal oppnå. 
        .mediatype-wrapper
          .mediatype-menu
              h3.mediatype-menu__title Legg til innhold
              ul.mediatype-menu__wrapper
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#")
                     svg.icon.icon--menu: use(xlink:href="/assets/symbol-defs.svg#icon-menu")
                     span.mediatype-menu__text Teori
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#")
                     svg.icon.icon--play-circle-outline: use(xlink:href="/assets/symbol-defs.svg#icon-play_circle_outline")
                     span.mediatype-menu__text Video
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#")
                     svg.icon.icon--contacts: use(xlink:href="/assets/symbol-defs.svg#icon-contacts")
                     span.mediatype-menu__text Quiz
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#")
                     svg.icon.icon--today: use(xlink:href="/assets/symbol-defs.svg#icon-menu")
                     span.mediatype-menu__text Oppgave


  a.cta-link.labeled-icon.new-learningpath-button(href="/pages/pre-opprett-laeringssti")
    svg.icon.icon--with-label.icon--add-circle-outline: use(xlink:href="/assets/symbol-defs.svg#icon-add_circle_outline")
    span.labeled-icon_text Opprett ny læringssti
