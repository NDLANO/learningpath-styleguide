extends layout

block append title
  | - Læringssti

block content
  .two-column
    aside.two-column_col
      .learningpath-general-info
        h2(contenteditable="true").learningpath-general-info_h Learning path title

      include ../molecules/step-nav.jade

      .vertical-menu
        a.cta-link.cta-link--block.cta(href="#")
          svg.icon.icon--collections: use(xlink:href="/assets/symbol-defs.svg#icon-collections")
          span.icon--space Forhåndsvisning
        a.cta-link.cta-link--block.cta.cta-link__top-spacing(href="#")
          svg.icon.icon--save: use(xlink:href="/assets/symbol-defs.svg#icon-save")
          span.icon--space Lagre som utkast
        a.button.button--outline.cta-link--block.cta-link__top-spacing(href="#")
          span.icon--space Lagre og publiser
          svg.icon.icon--arrow-forward: use(xlink:href="/assets/symbol-defs.svg#icon-arrow_forward")

    main.two-column_col
      .learning-path_hd
        h1.learning-path_title Introduksjon
      .learning-path_bd
        p Prosessanlegg omfatter hovedkomponentene i prosessanlegget og prosessen som leder fram til leveringsklar olje og gass. Du skal bli kjent med hovedkomponentene som inngår i prosessen og forstår hvordan og hvorfor råstoff behandles før det leveres til mottak.
        
        h3 Læringsmål/delmål
        ul
          li Du skal beskrive hovedkomponentene som inngår i prosessanlegget fra ventiltreet, og hvilken oppgave disse har.
          li Du skal beskrive hvordan olje, vann og gass behandles i prosessanlegget.
          li Du skal forklare hensikten med prosessen som gjøres med råstoffet før det sendes til mottaker.
      .learning-path_hd
        h1.learning-path_title Learning step one
      .learning-path_bd
        p You can edit this text inline. This is a introduction text. Please edit it as you see fit. This is not the real text meant to be here, remove this and add some new text that actually makes som sense.
        .mediatype-wrapper  
          .mediatype-menu
              h3.mediatype-menu__title Legg til innhold
              ul.mediatype-menu__wrapper
                 li.mediatype-menu__item
                   a.mediatype-menu__button.mediatype-menu__selected(href="#") 
                     svg.icon.icon--menu: use(xlink:href="/assets/symbol-defs.svg#icon-menu")
                     span.mediatype-menu__text Teori
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#") 
                     svg.icon.icon--play-circle-outline: use(xlink:href="/assets/symbol-defs.svg#icon-play_circle_outline")
                     span.mediatype-menu__text Video
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#") 
                     svg.icon.icon--contacts: use(xlink:href="/assets/symbol-defs.svg#icon-contacts")
                     span.mediatype-menu__text Quiz
                 li.mediatype-menu__item
                   a.mediatype-menu__button(href="#") 
                     svg.icon.icon--today: use(xlink:href="/assets/symbol-defs.svg#icon-menu")
                     span.mediatype-menu__text Oppgave
          .learningsourde-from    
            form
              label.mediatype-menu__label Lim in lenke (URL) fra ndla.no eller youtube.com
              input.cta-link--block(style="text-align: left;" type="url" value="https://ndla.no/nb/node/149925/oembed" placeholder="Lim in lenke" autofocus)
            .learningsource--wrapper
              iframe.learningsource__frame(src="https://ndla.no/nb/node/149925/oembed")
              a.learningsource__expand(href="#")
                span.button.button--outline Forhåndsvis hele artikkelen
      a.cta-link.cta-link--block.cta(href="#") 
        svg.icon.icon--add-circle-outline: use(xlink:href="/assets/symbol-defs.svg#icon-add_circle_outline")
        span.icon--space Legg til nytt læringssteg
