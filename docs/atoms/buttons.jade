  <div class="button-group-wrapper">
    <button class='button button--secondary'>
      <svg class="icon icon--with-label icon--clear"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/symbol-defs.svg#icon-clear"></use></svg>
      Avbryt
    </button>
