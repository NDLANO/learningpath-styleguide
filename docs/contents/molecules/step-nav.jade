.step-nav
  .step-nav_learningpath-general-info
    h3.step-nav_h Bottom Hole Assembly
    .step-nav_meta
      span.step-nav_author
        svg.icon.icon--person.icon--gray: use(xlink:href="assets/symbol-defs.svg#icon-person")
        a(href="#" rel="author") Remi Løvik
      span.step-nav_changed-date
        svg.icon.icon--today.icon--gray.icon__offsett: use(xlink:href="assets/symbol-defs.svg#icon-today")
        time 01.01.16
      span.step-nav_duration
        svg.icon.icon--query-builder.icon--gray: use(xlink:href="assets/symbol-defs.svg#icon-query_builder")
        time 10 t
  ul.step-nav_list
    li.step-nav_item: a.step-nav_link(href='#') Introdukjson
    - var i = 0
    while i++ < 7
      li.step-nav_item(class=i == 3 ? 'step-nav_item--active' : ''): a.step-nav_link(href='#') Bruksområde

    li.step-nav_item: a.step-nav_link(href='#') Prøve
